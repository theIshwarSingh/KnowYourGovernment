<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/location"
        android:layout_width="0dp"
        android:layout_height="29dp"
        android:gravity="center"
        android:textColor="@color/text_color"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:textColor="@color/text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/imageSmall"
                android:layout_width="158dp"
                android:layout_height="155dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="8dp"
                android:clickable="true"
                app:layout_constraintHorizontal_bias="0.528"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/party" />

            <TextView
                android:id="@+id/designation"
                android:layout_width="0dp"
                android:layout_height="29dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:gravity="center"
                android:textColor="@color/text_color"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/location" />

            <TextView
                android:id="@+id/nOfficial"
                android:layout_width="0dp"
                android:layout_height="43dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:gravity="center"
                android:textColor="@color/text_color"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/designation" />


            <TextView
                android:id="@+id/party"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="8dp"
                android:gravity="center"
                android:textColor="@color/text_color"
                android:textSize="18sp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nOfficial" />

            <TextView
                android:id="@+id/ad1"
                android:layout_width="254dp"
                android:layout_height="98dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:textColor="@color/text_color"
                android:textSize="18sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageSmall" />

            <TextView
                android:id="@+id/lbad1"
                android:layout_width="87dp"
                android:layout_height="28dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="Address:"
                android:textColor="@color/text_color"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/ad1"
                app:layout_constraintTop_toBottomOf="@+id/imageSmall" />


            <TextView
                android:id="@+id/phoneLabel"
                android:layout_width="87dp"
                android:layout_height="28dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="80dp"
                android:text="Phone:"
                android:textColor="@color/text_color"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lbad1" />


            <TextView
                android:id="@+id/phone"
                android:layout_width="254dp"
                android:layout_height="28dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="9dp"
                android:textColor="@color/text_color"
                android:textSize="18sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toEndOf="@+id/phoneLabel"
                app:layout_constraintTop_toBottomOf="@+id/ad1" />


            <TextView
                android:id="@+id/eMailLabel"
                android:layout_width="87dp"
                android:layout_height="28dp"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="8dp"
                android:text="Email:"
                android:textColor="@color/text_color"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/phoneLabel" />


            <TextView
                android:id="@+id/email"
                android:layout_width="254dp"
                android:layout_height="28dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="9dp"
                android:textColor="@color/text_color"
                android:textSize="18sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toEndOf="@+id/eMailLabel"
                app:layout_constraintTop_toBottomOf="@+id/phone" />


            <TextView
                android:id="@+id/webLabel"
                android:layout_width="90dp"
                android:layout_height="29dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="12dp"
                android:text="Website:"
                android:textColor="@color/text_color"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/eMailLabel" />


            <TextView
                android:id="@+id/web"
                android:layout_width="254dp"
                android:layout_height="68dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="7dp"
                android:textColor="@color/text_color"
                android:textSize="18sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toEndOf="@+id/webLabel"
                app:layout_constraintTop_toBottomOf="@+id/email" />


            <ImageButton
                android:id="@+id/yt"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="48dp"
                android:adjustViewBounds="false"
                android:background="@android:color/background_light"
                android:cropToPadding="true"
                android:elevation="12dp"
                android:fadingEdge="horizontal|vertical"
                android:onClick="yTClicked"
                android:scaleType="fitXY"
                app:layout_constraintStart_toEndOf="@+id/fb"
                app:layout_constraintTop_toBottomOf="@+id/web"
                app:srcCompat="@drawable/youtube" />

            <ImageButton
                android:id="@+id/gplus"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="92dp"
                android:adjustViewBounds="false"
                android:background="@android:color/background_light"
                android:cropToPadding="true"
                android:elevation="12dp"
                android:fadingEdge="horizontal|vertical"
                android:onClick="gPlusClicked"
                android:scaleType="fitXY"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/webLabel"
                app:srcCompat="@drawable/googleplus" />

            <ImageButton
                android:id="@+id/tweet"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="52dp"
                android:layout_marginTop="92dp"
                android:adjustViewBounds="false"
                android:background="@android:color/background_light"
                android:cropToPadding="true"
                android:elevation="12dp"
                android:fadingEdge="horizontal|vertical"
                android:onClick="tweetClicked"
                android:scaleType="fitXY"
                app:layout_constraintStart_toEndOf="@+id/gplus"
                app:layout_constraintTop_toBottomOf="@+id/webLabel"
                app:srcCompat="@drawable/twitter" />


            <ImageButton
                android:id="@+id/fb"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="48dp"
                android:adjustViewBounds="false"
                android:background="@android:color/background_light"
                android:cropToPadding="true"
                android:elevation="12dp"
                android:fadingEdge="horizontal|vertical"
                android:onClick="fbClicked"
                android:scaleType="fitXY"
                app:layout_constraintStart_toEndOf="@+id/tweet"
                app:layout_constraintTop_toBottomOf="@+id/web"
                app:srcCompat="@drawable/facebook" />


        </android.support.constraint.ConstraintLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>